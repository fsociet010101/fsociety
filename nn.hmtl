<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>üîí Panel de Control - CEO.ONION</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #0f172a, #1e293b, #334155);
            color: #e2e8f0;
            min-height: 100vh;
            position: relative;
            overflow-x: hidden;
        }

        .background-effects {
            position: fixed;
            width: 100%;
            height: 100%;
            overflow: hidden;
            z-index: 0;
        }

        .circle {
            position: absolute;
            border-radius: 50%;
            background: rgba(34, 197, 94, 0.1);
            filter: blur(40px);
            animation: float 8s ease-in-out infinite;
        }

        .circle:nth-child(1) {
            width: 250px;
            height: 250px;
            top: 10%;
            left: 10%;
            animation-delay: 0s;
        }

        .circle:nth-child(2) {
            width: 350px;
            height: 350px;
            bottom: 10%;
            right: 10%;
            background: rgba(59, 130, 246, 0.1);
            animation-delay: 3s;
        }

        .circle:nth-child(3) {
            width: 180px;
            height: 180px;
            top: 60%;
            left: 70%;
            background: rgba(168, 85, 247, 0.1);
            animation-delay: 6s;
        }

        @keyframes float {
            0%, 100% { transform: translateY(0px) scale(1) rotate(0deg); }
            33% { transform: translateY(-30px) scale(1.1) rotate(120deg); }
            66% { transform: translateY(15px) scale(0.9) rotate(240deg); }
        }

        .container {
            position: relative;
            z-index: 10;
            max-width: 1400px;
            margin: 0 auto;
            padding: 20px;
        }

        .header {
            text-align: center;
            margin-bottom: 2rem;
        }

        .title {
            font-size: 3rem;
            font-weight: bold;
            margin-bottom: 1rem;
            background: linear-gradient(135deg, #22c55e, #3b82f6, #a855f7);
            -webkit-background-clip: text;
            background-clip: text;
            -webkit-text-fill-color: transparent;
            text-shadow: 0 0 30px rgba(34, 197, 94, 0.3);
        }

        .subtitle {
            font-size: 1.2rem;
            color: #94a3b8;
            margin-bottom: 2rem;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        .stat-card {
            background: rgba(30, 41, 59, 0.9);
            backdrop-filter: blur(15px);
            border: 1px solid rgba(34, 197, 94, 0.2);
            border-radius: 15px;
            padding: 1.5rem;
            text-align: center;
            transition: all 0.3s ease;
        }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.5);
            border-color: rgba(34, 197, 94, 0.4);
        }

        .stat-number {
            font-size: 2.5rem;
            font-weight: bold;
            color: #22c55e;
            margin-bottom: 0.5rem;
        }

        .stat-label {
            color: #94a3b8;
            font-size: 1rem;
            font-weight: 500;
        }

        .controls {
            background: rgba(30, 41, 59, 0.9);
            backdrop-filter: blur(15px);
            border: 1px solid rgba(34, 197, 94, 0.2);
            border-radius: 15px;
            padding: 1.5rem;
            margin-bottom: 2rem;
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
            align-items: center;
            justify-content: space-between;
        }

        .btn {
            background: linear-gradient(135deg, #22c55e, #16a34a);
            color: white;
            border: none;
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
            cursor: pointer;
            font-size: 0.9rem;
            font-weight: 600;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(34, 197, 94, 0.3);
        }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(34, 197, 94, 0.4);
        }

        .btn-danger {
            background: linear-gradient(135deg, #ef4444, #dc2626);
            box-shadow: 0 4px 15px rgba(239, 68, 68, 0.3);
        }

        .btn-danger:hover {
            box-shadow: 0 8px 25px rgba(239, 68, 68, 0.4);
        }

        .filter-input {
            background: rgba(15, 23, 42, 0.8);
            border: 1px solid rgba(34, 197, 94, 0.3);
            border-radius: 8px;
            padding: 0.75rem 1rem;
            color: #e2e8f0;
            font-size: 0.9rem;
            min-width: 200px;
        }

        .filter-input:focus {
            outline: none;
            border-color: rgba(34, 197, 94, 0.6);
            box-shadow: 0 0 0 3px rgba(34, 197, 94, 0.1);
        }

        .visitors-container {
            background: rgba(30, 41, 59, 0.9);
            backdrop-filter: blur(15px);
            border: 1px solid rgba(34, 197, 94, 0.2);
            border-radius: 15px;
            padding: 1.5rem;
            max-height: 70vh;
            overflow-y: auto;
        }

        .visitor-card {
            background: rgba(15, 23, 42, 0.8);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 12px;
            padding: 1.5rem;
            margin-bottom: 1rem;
            transition: all 0.3s ease;
        }

        .visitor-card:hover {
            border-color: rgba(34, 197, 94, 0.3);
            transform: translateX(5px);
        }

        .visitor-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1rem;
            flex-wrap: wrap;
            gap: 0.5rem;
        }

        .visitor-id {
            font-family: 'Courier New', monospace;
            color: #3b82f6;
            font-weight: bold;
        }

        .visitor-time {
            color: #94a3b8;
            font-size: 0.9rem;
        }

        .visitor-details {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 1rem;
        }

        .detail-section {
            background: rgba(30, 41, 59, 0.5);
            border-radius: 8px;
            padding: 1rem;
        }

        .detail-title {
            color: #22c55e;
            font-weight: 600;
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .detail-item {
            display: flex;
            justify-content: space-between;
            margin-bottom: 0.3rem;
            font-size: 0.9rem;
        }

        .detail-label {
            color: #94a3b8;
            font-weight: 500;
        }

        .detail-value {
            color: #e2e8f0;
            font-family: 'Courier New', monospace;
            word-break: break-all;
            max-width: 200px;
            text-align: right;
        }

        .precision-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.3rem;
            padding: 0.2rem 0.6rem;
            border-radius: 15px;
            font-size: 0.7rem;
            font-weight: 600;
        }

        .precision-high {
            background: rgba(34, 197, 94, 0.2);
            color: #22c55e;
            border: 1px solid rgba(34, 197, 94, 0.4);
        }

        .precision-medium {
            background: rgba(251, 191, 36, 0.2);
            color: #fbbf24;
            border: 1px solid rgba(251, 191, 36, 0.4);
        }

        .precision-low {
            background: rgba(239, 68, 68, 0.2);
            color: #ef4444;
            border: 1px solid rgba(239, 68, 68, 0.4);
        }

        .no-visitors {
            text-align: center;
            color: #94a3b8;
            padding: 3rem;
            font-size: 1.2rem;
        }

        .scrollbar::-webkit-scrollbar {
            width: 8px;
        }

        .scrollbar::-webkit-scrollbar-track {
            background: rgba(15, 23, 42, 0.5);
            border-radius: 4px;
        }

        .scrollbar::-webkit-scrollbar-thumb {
            background: rgba(34, 197, 94, 0.5);
            border-radius: 4px;
        }

        .scrollbar::-webkit-scrollbar-thumb:hover {
            background: rgba(34, 197, 94, 0.7);
        }

        @media (max-width: 768px) {
            .title {
                font-size: 2rem;
            }

            .controls {
                flex-direction: column;
                align-items: stretch;
            }

            .visitor-details {
                grid-template-columns: 1fr;
            }

            .visitor-header {
                flex-direction: column;
                align-items: flex-start;
            }
        }
    </style>
</head>
<body>
    <div class="background-effects">
        <div class="circle"></div>
        <div class="circle"></div>
        <div class="circle"></div>
    </div>

    <div class="container">
        <div class="header">
            <h1 class="title">üîí Panel de Control - CEO.ONION</h1>
            <p class="subtitle">Historial de Visitantes GPS Tracker</p>
        </div>

        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-number" id="totalVisitors">0</div>
                <div class="stat-label">üë• Total Visitantes</div>
            </div>
            <div class="stat-card">
                <div class="stat-number" id="todayVisitors">0</div>
                <div class="stat-label">üìÖ Visitantes Hoy</div>
            </div>
            <div class="stat-card">
                <div class="stat-number" id="gpsEnabled">0</div>
                <div class="stat-label">üõ∞Ô∏è Con GPS Exacto</div>
            </div>
            <div class="stat-card">
                <div class="stat-number" id="uniqueIPs">0</div>
                <div class="stat-label">üåê IPs √önicas</div>
            </div>
        </div>

        <div class="controls">
            <input type="text" id="searchFilter" class="filter-input" placeholder="üîç Buscar por IP, pa√≠s, direcci√≥n...">
            <select id="timeFilter" class="filter-input">
                <option value="all">üìÖ Todos los tiempos</option>
                <option value="today">Hoy</option>
                <option value="week">Esta semana</option>
                <option value="month">Este mes</option>
            </select>
            <button class="btn" onclick="refreshData()">üîÑ Actualizar</button>
            <button class="btn" onclick="exportData()">üìä Exportar CSV</button>
            <button class="btn btn-danger" onclick="clearAllData()">üóëÔ∏è Limpiar Todo</button>
        </div>

        <div class="visitors-container scrollbar" id="visitorsContainer">
            <div class="no-visitors" id="noVisitors">
                üîç Cargando historial de visitantes...
            </div>
        </div>
    </div>

    <script>
        let allVisitors = [];
        let filteredVisitors = [];

        // Funci√≥n para obtener la IP del usuario
        async function getUserIP() {
            try {
                const response = await fetch('https://api.ipify.org?format=json');
                const data = await response.json();
                return data.ip;
            } catch (error) {
                console.error('Error obteniendo la IP:', error);
                return null;
            }
        }

        // Funci√≥n para guardar un visitante en localStorage
        function saveVisitor(ip) {
            const visitor = {
                id: Date.now().toString(),
                timestamp: new Date().toISOString(),
                ip: ip,
                userAgent: navigator.userAgent,
                referrer: document.referrer,
                url: window.location.href
            };
            const storedVisitors = JSON.parse(localStorage.getItem('gps_visitors')) || [];
            storedVisitors.push(visitor);
            localStorage.setItem('gps_visitors', JSON.stringify(storedVisitors));
        }

        // Cargar datos de visitantes
        function loadVisitors() {
            try {
                const stored = localStorage.getItem('gps_visitors');
                allVisitors = stored ? JSON.parse(stored) : [];
                allVisitors.sort((a, b) => new Date(b.timestamp) - new Date(a.timestamp));
                updateStats();
                filterAndDisplayVisitors();
            } catch (error) {
                console.error('Error cargando visitantes:', error);
                allVisitors = [];
            }
        }

        // Actualizar estad√≠sticas
        function updateStats() {
            const total = allVisitors.length;
            const today = allVisitors.filter(v => {
                const visitDate = new Date(v.timestamp);
                const todayDate = new Date();
                return visitDate.toDateString() === todayDate.toDateString();
            }).length;

            const gpsEnabled = allVisitors.filter(v => v.gps && v.gps.latitude).length;
            const uniqueIPs = new Set(allVisitors.map(v => v.ip)).size;

            document.getElementById('totalVisitors').textContent = total;
            document.getElementById('todayVisitors').textContent = today;
            document.getElementById('gpsEnabled').textContent = gpsEnabled;
            document.getElementById('uniqueIPs').textContent = uniqueIPs;
        }

        // Filtrar y mostrar visitantes
        function filterAndDisplayVisitors() {
            const searchTerm = document.getElementById('searchFilter').value.toLowerCase();
            const timeFilter = document.getElementById('timeFilter').value;

            filteredVisitors = allVisitors.filter(visitor => {
                // Filtro de b√∫squeda
                const searchMatch = !searchTerm ||
                    visitor.ip.toLowerCase().includes(searchTerm) ||
                    (visitor.ipInfo && visitor.ipInfo.country && visitor.ipInfo.country.toLowerCase().includes(searchTerm)) ||
                    (visitor.address && visitor.address.toLowerCase().